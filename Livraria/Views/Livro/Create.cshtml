@model Livraria.Models.Livro

@{
    Layout = "~/Views/Shared/_LayoutLivraria.cshtml";
    ViewData["Title"] = "Inclusão";
}

<!DOCTYPE html>

<html>


<body>

    <div class="bg-dark text-white text-center h5 p-2 mb-3">Inclusão de Livro</div>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Titulo" class="control-label col-2"></label>
                <div class="col-6">
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Preco" class="control-label col-2"></label>
                <div class="col-6">
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Disponivel" /> @Html.DisplayNameFor(model => model.Disponivel)
                        </label>
                    </div>
                </div>
                <div class="form-group text-center h3">
                    <input type="submit" value="Incluir" class="btn btn-info" />
                    <a asp-action="Index" class="btn btn-info">Voltar para a home</a>
                </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
