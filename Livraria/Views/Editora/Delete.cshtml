@model Livraria.Models.Editora



    @{
        Layout = "~/Views/Shared/_LayoutLivraria.cshtml";
        ViewData["Title"] = "Exclusão";
    }

    <div class="bg-dark text-white text-center h5 p-2 mb-3">Confirmação de Exclusão de Editora</div>
    <div class="form-group">
        <div class="row">
            <label asp-for="EditoraId" class="control-label col-2"></label>
            <div class="col-10">@Html.DisplayFor(model => model.EditoraId)</div>
        </div>
        <div class="row">
            <label asp-for="Nome" class="control-label col-2"></label>
            <div class="col-10">@Html.DisplayFor(model => model.Nome)</div>
        </div>
        <div class="row">
            <label asp-for="Site" class="control-label col-2"></label>
            <div class="col-10">@Html.DisplayFor(model => model.Site)</div>
        </div>
    </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="EditoraId" />
            <div class="form-group text-center h3">
                <input type="submit" value="Excluir" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-info">Voltar para a home</a>
            </div>
        </form>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
   

